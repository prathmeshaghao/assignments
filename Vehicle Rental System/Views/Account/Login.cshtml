@model Vehicle_Rental_System.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<style>
    /* Background: Sports Car Theme */
    body {
        background: url('https://source.unsplash.com/1600x900/?car,road') no-repeat center center fixed;
        background-size: cover;
        height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    .navbar-custom {
        background-color: #000 !important; /* Solid Black */
        padding: 15px 30px;
        width: 100%;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        position: absolute;
        top: 0;
        left: 0;
        z-index: 1000; /* Ensures it stays above other elements */
    }



    /* Glassmorphic Login Box */
    .login-container {
        backdrop-filter: blur(12px);
        background: rgba(0, 0, 0, 0.7); /* Dark Glass Effect */
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0 8px 20px rgba(255, 204, 0, 0.3);
        width: 380px;
        transition: transform 0.3s ease-in-out;
        margin-top: 80px;
        text-align: center;
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

        .login-container:hover {
            transform: scale(1.03);
        }

    /* Form Fields */
    .form-control {
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.3);
        color: white;
        padding: 12px;
        border-radius: 8px;
        transition: all 0.3s ease-in-out;
    }

        .form-control::placeholder {
            color: rgba(255, 255, 255, 0.6);
        }

        .form-control:focus {
            background: rgba(255, 255, 255, 0.2);
            border-color: #ffcc00;
            box-shadow: 0px 0px 10px #ffcc00;
            outline: none;
        }

    /* Login Button */
    .btn-custom {
        background: linear-gradient(45deg, #ffcc00, #ff8800);
        border: none;
        color: black;
        font-weight: bold;
        transition: all 0.3s ease-in-out;
        padding: 12px;
        border-radius: 8px;
        cursor: pointer;
        box-shadow: 0px 4px 10px rgba(255, 136, 0, 0.5);
    }

        .btn-custom:hover {
            background: linear-gradient(45deg, #ff8800, #ff5500);
            box-shadow: 0px 6px 15px rgba(255, 85, 0, 0.6);
            transform: scale(1.05);
        }

    /* Forgot Password / Signup Links */
    .text-muted a {
        text-decoration: none;
        font-weight: bold;
        color: #ffcc00;
        transition: color 0.3s ease-in-out;
    }

        .text-muted a:hover {
            color: #ff8800;
        }

</style>

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-custom">
    <div class="container">
        <a class="navbar-brand text-light fw-bold" href="#">🚗 Vehicle Rental System - VRS</a>
        <div class="ms-auto">
            <a asp-action="Register" class="btn btn-outline-light me-2">Register</a>
            <a asp-action="Login" class="btn btn-light">Login</a>
        </div>
    </div>
</nav>

<!-- Centered Login Card -->
<div class="d-flex justify-content-center align-items-center" style="height: 80vh;">
    <div class="login-container text-center">
        <h2 class="text-light mb-4">Welcome Back</h2>

        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="form-check text-light">
                    <input class="form-check-input" asp-for="RememberMe" />
                    <label class="form-check-label">Remember Me</label>
                </div>
                <a href="#" class="small text-muted">Forgot Password?</a>
            </div>

            <button type="submit" class="btn btn-custom w-100">Log In</button>

            <div class="text-center mt-3 text-muted">
                New here? <a asp-action="Register">Create an Account</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
